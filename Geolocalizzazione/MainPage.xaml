<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Geolocalizzazione.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="GEOLOCALIZZAZIONE"
                FontSize="18"
                HorizontalOptions="Center" />

            <Label
                x:Name="Visualizza"
                Text=""
                FontSize="18"
                HorizontalOptions="Center"/>

            <Button
                x:Name="LocalizzazioneBtn"
                Text="Localizzami"
                Clicked="LocalizzazioneBtn_Clicked"
                HorizontalOptions="Center" />
            
            <Label
                x:Name="PathLabel"
                Text=""
                FontSize="18"
                HorizontalOptions="Center"/>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
